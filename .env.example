# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Session Configuration for Login Persistence
SESSION_SECRET=your_session_secret_key
# Set to 'true' in production to use Firestore for session storage
USE_FIRESTORE_SESSIONS=false

# Database Configuration
# Set to 'true' to use Firebase Firestore (requires firebase-service-account.json)
# If false or unset, uses local file-based database (recommended)
USE_FIREBASE=false

# Firebase Configuration (only needed if USE_FIREBASE=true)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Environment
NODE_ENV=development
PORT=3000