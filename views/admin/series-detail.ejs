                <div class="timeline">
                    <% 
                    const maxGames = series.seriesType === 'BO3' ? 3 : 5;
                    for (let i = 1; i <= maxGames; i++) {
                        const game = (series.games || []).find(g => g.gameNumber === i);
                    %>
                        <div class="timeline-item <%= game ? 'completed' : 'pending' %>">
                            <div class="timeline-marker">
