    </main>

    <style>
        .breadcrumb {
            margin-bottom: 1rem;
        }

        .breadcrumb a {
            color: var(--secondary-color);
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        .series-detail-content {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .series-status,
        .games-list,
        .series-timeline,
        .series-notes {
            padding: 2rem;
        }

        .status-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .status-item {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .status-item label {
            font-weight: 600;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .series-type {
            display: inline-block;
            padding: 0.3rem 0.6rem;
            border-radius: 4px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .series-type.bo3 {
            background: var(--primary-color);
            color: white;
        }

        .series-type.bo5 {
            background: var(--accent-color);
            color: white;
        }

        .status-badge {
            display: inline-block;
            padding: 0.3rem 0.6rem;
            border-radius: 4px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .status-badge.ongoing {
            background: var(--warning-color);
            color: var(--background-dark);
        }

        .status-badge.completed {
            background: var(--success-color);
            color: white;
        }

        .score-display {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .winner-name {
            font-weight: 700;
            color: var(--success-color);
            font-size: 1.1rem;
        }

        .no-winner {
            color: var(--text-secondary);
        }

        .next-game-info {
            background: rgba(255, 255, 255, 0.05);
            padding: 1rem;
            border-radius: 8px;
            border-left: 4px solid var(--primary-color);
        }

        .games-table {
            overflow-x: auto;
        }

        .games-table table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        .games-table th,
        .games-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
        }

        .games-table th {
            background: rgba(255, 255, 255, 0.1);
            font-weight: 600;
            color: var(--primary-color);
        }

        .game-number {
            font-weight: 600;
            color: var(--primary-color);
        }

        .result-score {
            font-weight: 600;
            color: var(--accent-color);
        }

        .points {
            display: inline-block;
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            font-weight: 700;
            font-size: 0.8rem;
        }

        .hunter-points {
            background: var(--error-color);
            color: white;
        }

        .survivor-points {
            background: var(--primary-color);
            color: white;
        }

        .game-winner {
            font-weight: 700;
            padding: 0.3rem 0.6rem;
            border-radius: 4px;
            font-size: 0.9rem;
        }

        .game-winner.team1 {
            background: var(--primary-color);
            color: white;
        }

        .game-winner.team2 {
            background: var(--accent-color);
            color: white;
        }

        .bonus-badge {
            display: inline-block;
            padding: 0.2rem 0.5rem;
            background: var(--warning-color);
            color: var(--background-dark);
            font-size: 0.7rem;
            font-weight: 600;
            border-radius: 4px;
            margin-left: 0.5rem;
        }

        .no-games {
